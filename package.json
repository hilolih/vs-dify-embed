{
    "name": "vs-dify-embed",
    "displayName": "VS Dify Embed",
    "description": "VS Code extension to embed Dify AI assistants in the secondary sidebar",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vs-dify-embed.toggleSidebar",
                "title": "Toggle Dify Assistant Sidebar"
            },
            {
                "command": "vs-dify-embed.copy4mailReply",
                "title": "メール返信用"
            }
        ],
        "keybindings": [
            {
                "command": "vs-dify-embed.toggleSidebar"
            }
        ],
        "viewsContainers": {
            "panel": [
                {
                    "id": "dify-sidebar",
                    "title": "Dify Assistant",
                    "icon": "$(robot)"
                }
            ]
        },
        "views": {
            "dify-sidebar": [
                {
                    "id": "dify-assistant",
                    "name": "Dify Assistant",
                    "type": "webview"
                }
            ]
        },
        "configuration": {
            "title": "VS Dify Embed",
            "properties": {
                "vs-dify-embed.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable or disable the Dify Assistant extension"
                },
                "vs-dify-embed.urllist": {
                    "type": "array",
                    "default": [
                        {
                            "name": "Default Assistant",
                            "url": "http://ai.hokkaido-np.co.jp/chat/t9BjJCUgTcNwdz4i"
                        }
                    ],
                    "description": "List of Dify assistants with name and URL pairs",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Name of the assistant"
                            },
                            "url": {
                                "type": "string",
                                "description": "URL of the assistant"
                            }
                        },
                        "required": [
                            "name",
                            "url"
                        ]
                    }
                }
            }
        },
        "menus": {
            "editor/context": [
                {
                    "when": "editorHasSelection",
                    "command": "vs-dify-embed.copy4mailReply",
                    "group": "vs-dify-embed"
                }
            ]
        },
        "terminal/context": [
            {
                "command": "vs-dify-embed.copy4mailReply",
                "when": "terminalHasText",
                "group": "vs-dify-embed"
            }
        ]
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "package": "vsce package",
        "build": "npm run compile"
    },
    "devDependencies": {
        "@types/vscode": "^1.75.0",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^8.0.0",
        "glob": "^7.2.0",
        "mocha": "^9.1.3",
        "typescript": "^4.4.4",
        "vscode-test": "^1.6.1"
    }
}